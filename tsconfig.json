{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "es6",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "allowSyntheticDefaultImports": true,
        "declarationDir": "dist/types",
        "outDir": ".compiled",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src"
    ]
}
